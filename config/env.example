# Meeting Assistant Configuration
# Copy this file to .env and fill in your API keys
# 
# Placement:
# - For local development: Copy to /.env (project root)
# - For OpenShift: Copy to /config/.env (mount as persistent volume)
# System automatically checks both locations: /config/.env first, then /.env

# OpenAI API Configuration (for Whisper transcription)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=https://api.openai.com
WHISPER_MODEL=whisper-1
WHISPER_LANGUAGE=sv

# LLM Configuration (for template filling)
LLM_API_KEY=your_openai_api_key_here
LLM_BASE_URL=https://api.openai.com
LLM_MODEL=gpt-4o-mini
LLM_TEMPERATURE=0.2

# Storage Configuration
STORAGE_PATH=data

# Timeout Configuration (for OpenShift and long-running tasks)
# PHP max execution time in seconds (0 = unlimited, but may be limited by server)
# Default: 1800 (30 minutes) - sufficient for transcribing 1-hour audio files
PHP_MAX_EXECUTION_TIME=1800
# CURL timeout for API calls in seconds
# Default: 1800 (30 minutes) - allows time for upload + processing of large audio files
CURL_TIMEOUT=1800
# CURL connection timeout in seconds
CURL_CONNECT_TIMEOUT=60
# Prevent connection closure when user aborts (recommended for OpenShift)
IGNORE_USER_ABORT=true

# Mock Mode (set to true for demo without API keys)
MOCK_MODE=false

